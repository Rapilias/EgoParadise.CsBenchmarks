{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    ".vitepress/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vitepress/cache",
    ".vitepress/dist"
  ]
}


